<% layout('layouts/boilerPlate') %>
<div class="account-settings-container layout-top-spacing">
  <div id="content" class="main-content">
    <div class="layout-px-spacing">
      <div class="page-header">
        <nav class="breadcrumb-one" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="javascript:void(0);">Pages</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              <a href="javascript:void(0);">Account Settings</a>
            </li>
          </ol>
        </nav>
      </div>

      <div class="account-content">
        <div
          class="scrollspy-example"
          data-spy="scroll"
          data-target="#account-settings-scroll"
          data-offset="-100"
        >
          <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
              <form id="general-info" class="section general-info" action="/auth/update_profile" method="post" enctype="multipart/form-data">
                <div class="info">
                  <h6 class="">User Profile</h6>
                  <div class="row">
                    <div class="col-lg-11 mx-auto">
                      <div class="row">
                        <div class="col-xl-2 col-lg-12 col-md-4">
                          <div class="upload mt-4 pr-md-4">

                            <% if(user.profile_photo_path){  %> 
                                
                            <img style="width:200px ;height:200px" src="<%= user.profile_photo_path %>" alt="user profile"  />
                            <input type="file" class="mt-3 mr-2" accept="image/*" wire:model="image" name="image">
                       
                            <% }else{ %> 
                                <input
                                type="file"
                                id="input-file-max-fs"
                                class="dropify"
                                data-default-file="/assets/img/200x200.jpg"
                                name="image"
                                
                              />
                              <p class="mt-2">
                                <i class="flaticon-cloud-upload mr-1"></i> Upload
                                Picture
                              </p>
                            <% } %> 
                          </div>
                        </div>
                        <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4 ">
                          <div class="form">
                            <div class="row">
                              <div class="col-sm-6">
                                <div class="form-group">
                                  <label for="fullName" style="color: #198754;font-weight : bold">First Name</label>
                                  <input
                                    type="text"
                                    class="form-control mb-4"
                                    id="fullName"
                                    placeholder="Please Enter Your First Name"
                                    value="<%= user.first_name %>"
                                    name="first_name"
                                   
                                  />
                                </div>
                              </div>
                              <div class="col-sm-6">
                                
                            <div class="form-group">
                              <label for="profession" style="color: #198754;font-weight : bold">Last Name</label>
                              <input
                                type="text"
                                class="form-control mb-4"
                                id="profession"
                                placeholder="Please Enter Your Last Name"
                                value="<%= user.last_name %>"
                                name="last_name"
                            />
                            </div>
                            
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-sm-6">
                              <div class="form-group">
                                <label for="fullNames" style="color: #198754;font-weight : bold">Mobile Number</label>
                                <input
                                  type="text"
                                  class="form-control mb-4"
                                  id="fullNames"
                                  placeholder="Please Enter Your Mobile No"
                                  value="<%= user.mobile_number %>"
                                  name="mobile_number"
                                />
                              </div>
                            </div>
                            <div class="col-sm-6">
                              
                          <div class="form-group">
                            <label for="professions" style="color: #198754;font-weight : bold">Alternate Mobile Number</label>
                            <input
                              type="text"
                              class="form-control mb-4"
                              id="professions"
                              placeholder="Please Enter Your Alternate Mobile NO"
                              value="<%= user.alternate_mobile_number %>"
                                    name="alternate_mobile_number"
                            />
                          </div>
                          
                          </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="professionss" style="color: #198754;font-weight : bold">Alternate Email</label>
                                    <input
                                      type="text"
                                      class="form-control mb-4"
                                      id="professionss"
                                      placeholder="Please Enter Your Alternate Email"
                                      value="<%= user.alternate_email %>"
                                    name="alternate_email"
                                    />
                                  </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">

                                    <button type="submit" class="btn btn-primary mt-4">Save</button>
                                    <button type="button" class="btn btn-danger mt-4 ml-2"><a href="/auth/get_profile" style="color:#fff ;">Discard</a></button>
                                </div>

                            </div>

                        </div>
                        </div>
                        
                      
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

</div>
