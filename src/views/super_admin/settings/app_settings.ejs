                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                colspan="1" aria-sort="ascending" aria-label="#: activate to sort column descending"
                                style="width: 86px;"> Name</th>
                            <!-- <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                                aria-label="NAME: activate to sort column ascending" style="width: 100px;">key</th> -->
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                                aria-label="IMAGE: activate to sort column ascending" style="width: 53px;">value</th>
                            <th class="text-center sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                colspan="1" aria-label="Status: activate to sort column ascending" style="width: 49px;">
                                Status</th>
                            <th class="text-center dt-no-sorting sorting" tabindex="0"
                                aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                                aria-label="Action: activate to sort column ascending" style="width: 56px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr role="row">

                            <% for(app_settings of data){ %>
                                    <td class="sorting_1"><%=app_settings.id %></td>
                                    <td><%=app_settings.name %></td>
                                    <!-- <td><%=app_settings.key %> </td> -->
                                    <td><%=app_settings.value %></td>
                                   

                                    <div>
                                        <td style="text-align: center; vertical-align: middle;">
                                            <div class="custom-control custom-switch">
                                                    <input <%= app_settings.status == "1" ? "checked"  :""  %>  type="checkbox"   class="custom-control-input" name="status" 
                                                    value="<%=app_settings.status %>"  onChange="onToDochange(this)" id=<%=app_settings.id %>>
                                                    <label class="custom-control-label"  for=<%=app_settings.id %>></label>
                                                
                                                    <script >
                                                        async function onToDochange(event) {
                                                        await fetch('/super_admin/settings/update_settings_status', {
                                                        method: 'POST',
                                                        headers: {
                                                            'Accept': 'application/json',
                                                            'Content-Type': 'application/json'
                                                        },
                                                        body: JSON.stringify({"id": event.id , "status" : event.value})
                                                        })
                                                     
                                                        window.location.reload("/super_admin/settings/app_settings")
                                                    };
                                                    </script>
                                             
                                            </div>
                                        </td>
                                        <td class="text-center"> <button class="btn btn-sm btn-primary" data-toggle="modal"
                                            data-target="#editCategory<%=app_settings.id %>">edit</button> </td>
                                    </div>
                                    
                                </tr>


                                <div wire:ignore.self="" class="modal fade" id="editCategory<%= app_settings.id %>" tabindex="-1"
                                    aria-labelledby="addCategoryTitle" style="display: none;" aria-hidden="true">
