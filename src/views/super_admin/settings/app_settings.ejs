                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalCenterTitle">Edit App</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24"
                                                        height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                        class="feather feather-x">
                                                        <line x1="18" y1="6" x2="6" y2="18"></line>
                                                        <line x1="6" y1="6" x2="18" y2="18"></line>
                                                    </svg>
                                                </button>
                                            </div>
            
                                            
                                            <div class="modal-body">
                                                <form method="post" action="/super_admin/settings/update_appsettings">
                                                    <div class="form-row mb-4">
                                                        <div class="col-sm-6">
                                                            <label> Name</label>
                                                            <input type="text" class="form-control" wire:model="name"
                                                                placeholder="Name" name="name" value="<%=app_settings.name %>" required>

                                                        </div>
                                                        <div class="col-6">
                                                            <label>value</label>
                                                            <input type="text" class="form-control" wire:model="name" 
                                                                placeholder="value" name="value" value="<%= app_settings.value %>">
                                                           
                                                        </div>

                                                    </div>
                                                    
                                                    
                                                    <div class="form-row mb-4">
                                                        
                                                            <!-- <div class="col-6 ">
                                                                <label>key</label>
                                                                <input type="text" class="form-control" wire:model="name" 
                                                                    placeholder="key" name="key" value="<%= app_settings.key %>">
                                                               
                                                            </div> -->
                                                           
                                                    </div>
                                                </div>
                                             
                                                    <div class="modal-footer">
                                                        
                                                        <button type="button" name="id" value="<%=app_settings.id %>" class="btn btn-danger" id="addmodalClose" data-dismiss="modal"><i
                                                            class="flaticon-cancel-12"></i>Discard</button>
                                                            <button wire:click="save" name="id" value="<%=app_settings.id %>"  type="submit" class="btn btn-success">Save</button>
                                                    </div>
                                            </form>
                                        </div>
                                    </div>
                                


                        <% } %>


                        
                    </tbody>

                </table>
            </div>
            <% if(numberOfPages != 1){ %> 
            <div class="dt--bottom-section d-sm-flex justify-content-sm-between text-center pt-4 ">
                <div class="dt--pages-count  mb-sm-0 mb-3">
                  <% let search_query =  is_search ? `&searchKeyword=${searchKeyword}` : "" %>
                </div>
                <div class="widget-content widget-content-area text-center">
                <nav class="paginating-container " aria-label="...">
                    <ul class="pagination-default pagination">
                        <% if(page > 1) { %> 
                            <li class="prev">
                                <a href="/super_admin/settings/app_settings?page=<%=page-1%><%= search_query %>"  style="padding-left: 5px;">Prev</a>
                      
                             <% } %>
                       
                             <% for(let i = iterator==0 ? 1 : iterator; i <= endingLink; i++) { %>
                                <% if(i === page) { %>
                                    <li class="page-item active" style="padding-left: 5px;"><a  href="#"><%=i%></a></li>
                                  
                                    <% continue; %>
                                    <% } %>
              
               
               
               
            
                                    <li class="page-item" style="padding-left: 5px;"><a  href="/super_admin/settings/app_settings?page=<%=i%><%= search_query %>"><%=i%></a></li>
