                                                    <script >
                                                        async function onToDochange(event) {
                                                        await fetch('/super_admin/places/update_zone_status', {
                                                        method: 'POST',
                                                        headers: {
                                                            'Accept': 'application/json',
                                                            'Content-Type': 'application/json'
                                                        },
                                                        body: JSON.stringify({"id": event.id , "status" : event.value})
                                                        })
                                                     
