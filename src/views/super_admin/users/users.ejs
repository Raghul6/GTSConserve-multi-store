
<% layout('layouts/boilerPlate') %>
    <div class="widget-content widget-content-area br-6">
        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
            <div class="row">
                 <div class="col-8">
                        <h3 class="mt-2">Users</h3>
                        </div>
                        <div class="col-4">
                             <div class="input-group mb-3">
                            <input type="text" class="form-control" name="searchKeyword" oninput="onChangeSearch()" value="<%=searchKeyword ? searchKeyword : ""  %>"  id="searchText" placeholder="search by username or mobile number"  aria-describedby="basic-addon2">
                            <div class="input-group-append" style="cursor: pointer;"  onclick="onSearch()" >
                              <span style="background-color: #64a5e2;" class="input-group-text " id="basic-addon2"><svg style="color: #fff;" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg></button></span>
                            </div>
                          </div>
                          </div>     
             
             

            </div>
    </div>


                    
                                <script>

                                    async function onChangeSearch(event){
                                        const text = document.getElementById("searchText").value;
                                        if(!text){

                                            return window.location.href = `/super_admin/users_subscription/get_all_users`
                                        }

                                    }

                                    async function onSearch(event) {
                                       
                                        const text = document.getElementById("searchText").value;
                            
                                        window.location.href = `/super_admin/users_subscription/get_all_users?searchKeyword=${text}`
                              
                                 
                                };
                                </script>
            
    

        <% if(data.length === 0){ %> 
            <h2>No User Found</h2>
            <% }else if(loading) { %>
                <div class="row">
                    <div class="col-5">
    
                    </div>
                    <div class="col-2">
                        <button class="btn btn-success btn-lg mb-3 mr-3"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-loader spin mr-2"><line x1="12" y1="2" x2="12" y2="6"></line><line x1="12" y1="18" x2="12" y2="22"></line><line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line><line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line><line x1="2" y1="12" x2="6" y2="12"></line><line x1="18" y1="12" x2="22" y2="12"></line><line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line><line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line></svg>  Loading</button>
                    </div>
                </div>
    
                <% } else {  %>
        <div class="table-responsive">
            <table class="table table-bordered table-striped mb-4" style="width: 100%;  font-weight: bold; box-shadow: 8px 5px 5px 0px #aaa;" id="DataTables_Table_0"
                role="grid" aria-describedby="DataTables_Table_0_info">
                <thead >
    
                    <tr role="row"  >
                        <th  class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                            colspan="1" aria-sort="ascending" aria-label="#: activate to sort column descending"
                            style="width: 20px;">User Id</th>
                        <th  class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                            colspan="1" aria-sort="ascending" aria-label="#: activate to sort column descending"
                            style="width: 20px;">User Name</th>
                       
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="NAME: activate to sort column ascending" style="width: 20px;">Branch</th>
                        
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="IMAGE: activate to sort column ascending" style="width: 53px;">address</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="IMAGE: activate to sort column ascending" style="width: 10px;">mobile number</th>
                        
                            
                        <th class="text-center dt-no-sorting sorting" tabindex="0"
                            aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                            aria-label="Action: activate to sort column ascending" style="width: 64px;">Action</th>
                    </tr>
                </thead>
                <tbody>
    
                    <tr role="row" >

                        <% for(user of data){ %>
                                <td class="sorting_1"><%=user.user_unique_id %></td>
                                <td class="sorting_1"><%=user.user_name %></td>
                                <td ><%=user.branch_name ? user.branch_name : "N/A" %></td>
                                
                                <td><%=user.address %></td>
                                <td><%=user.mobile_number %> </td>
                                <div>
                                    <td  class="text-center" > 
                                        <button style="font-weight: bold;" class="btn  btn-md  btn-info" 
                                             data-toggle="modal"
                                       data-target="#userUpdate<%=user.user_address_id%>"
                                        >Edit</button>
                                        <button style="font-weight: bold;" class="btn m-2 btn-md  btn-primary" 
                                        onclick="viewhandler(this)" id="<%= user.user_address_id%>"
                                        >view</button>
                                        <!-- <button style="font-weight: bold;" class="btn  btn-md  btn-warning " 
                                        onclick="billView(this)" id="<%= user.user_id%>"
                                        >Bill</button> -->
                                    </td>
                                    </td>
                                    
                                </div>
                                
                            </tr>
                            <script>
                                function viewhandler(event){
                                     window.location.href = `/super_admin/users_subscription/single_user?user_address_id=${event.id}`
                                }
                                function billView(event){
                                     window.location.href = `/super_admin/user/get_bill?user_id=${event.id}`
                                }
                            </script>
    
 
                
    </div>


    <div wire:ignore.self="" class="modal fade" id="userUpdate<%= user.user_address_id %>" tabindex="-1"
        aria-labelledby="addCategoryTitle" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Edit User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24"
                            height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="feather feather-x">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </button>
                </div>

                <div class="modal-body">
                    <form method="post" action="/super_admin/users_subscription/updateUser">
                        <div class="form-row mb-4">
                            <div class="col-sm-6">
                                <label>User Name</label>
                                <input type="text" class="form-control" wire:model="name" minlength="3"
                                    placeholder="Name" name="user_name" value="<%=user.user_name %>" required>

                            </div>
                            <div class="col-sm-6">
                                <label>Mobile Number</label>
                                <input type="text" class="form-control" wire:model="name" minlength="10" maxlength="10"
                                    placeholder="10 digtit Mobile Number" name="mobile_number" value="<%=user.mobile_number %>" required>

                            </div>
                        </div>
                        <div class="form-row mb-4">
                            <!-- <div class="col-12">
                                <label>Choose a Branch</label>
                                
                              
                            </div> -->
                            <div class="col-12 mt-3">
                                <label for="address">Address</label>
                                <textarea id="address" minlength="10"  rows="4" class="form-control" name="address"><%= user.address %> </textarea>
                            </div>
                            
                        </div>
                        
                        <div class="modal-footer">
                                <button wire:click="save" name="address_id" value="<%=user.user_address_id %>"  type="submit" class="btn btn-primary">Save</button>
                        </div>
                </form>
            </div>
        </div>
    </div>

    
    
    </div>
        
                    <% } %>
              
                </tbody>
    
            </table>
        </div>
                      
        <% if(numberOfPages != 1){ %> 
        <div class="dt--bottom-section d-sm-flex justify-content-sm-between text-center pt-4 ">
            <div class="dt--pages-count  mb-sm-0 mb-3">
              <% let search_query =  is_search ? `&searchKeyword=${searchKeyword}` : "" %>
            </div>
            <div class="widget-content widget-content-area text-center">
            <nav class="paginating-container " aria-label="...">
                <ul class="pagination-default pagination">
                    <% if(page > 1) { %> 
                        <li class="prev">
                            <a href="/super_admin/users_subscription/get_all_users?page=<%=page-1%><%= search_query %>"  style="padding-left: 5px;">Prev</a>
                  
                         <% } %>
                   
                         <% for(let i = iterator==0 ? 1 : iterator; i <= endingLink; i++) { %>
                            <% if(i === page) { %>
                                <li class="page-item active" style="padding-left: 5px;"><a  href="#"><%=i%></a></li>
                              
                                <% continue; %>
                                <% } %>
                                <li class="page-item" style="padding-left: 5px;"><a  href="/super_admin/users_subscription/get_all_users?page=<%=i%><%= search_query %>"><%=i%></a></li>
                        <% } %>
                    
                    <% if(page < numberOfPages) { %>
                        <li class="next" style="padding-left: 5px;">
                            <a  href="/super_admin/users_subscription/get_all_users?page=<%=page+1%><%= search_query %>">Next</a>
                        </li>
                      
                         <% } %>
                         
                </ul>
            </nav>
        </div>
        </div>
        <% } %>
    </div>
    <% } %>
